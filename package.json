{
    "name": "openclassrooms-vscode-plugin",
    "description": "OpenClassrooms Visual Studio plugin",
    "version": "0.0.1",
    "publisher": "OpenClassrooms",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.jsx",
        "workspaceContains:**/*.tsx"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "openclassrooms-extension",
                    "title": "OpenClassrooms",
                    "icon": "media/c.svg",
                    "when": ""
                }
            ]
        },
        "views": {
            "openclassrooms-extension": [
                {
                    "type": "webview",
                    "id": "openclassrooms.view.info",
                    "name": "Info",
                    "contextualTitle": "Info"
                },
                {
                    "type": "webview",
                    "id": "openclassrooms.view.translationList",
                    "name": "TranslationList",
                    "contextualTitle": "Translation list"
                },
                {
                    "id": "openclassrooms.view.info2",
                    "name": "Info 2",
                    "contextualTitle": "Info2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/flat": "^5.0.2",
        "@types/lodash": "^4.14.181",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "esbuild": "^0.14.30",
        "eslint": "^7.21.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@types/js-yaml": "^4.0.5",
        "@types/node-fetch": "^2.6.1",
        "flat": "^5.0.2",
        "fs-extra": "^10.0.1",
        "js-yaml": "^4.1.0",
        "lodash": "^4.17.21",
        "node-fetch": "^2"
    }
}
