{
    "name": "openclassrooms-vscode-plugin",
    "description": "OpenClassrooms Visual Studio plugin",
    "version": "0.2.0",
    "publisher": "OpenClassrooms",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.jsx",
        "workspaceContains:**/*.tsx"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "openclassrooms-extension",
                    "title": "OpenClassrooms",
                    "icon": "media/c.svg",
                    "when": ""
                }
            ]
        },
        "views": {
            "openclassrooms-extension": [
                {
                    "type": "webview",
                    "id": "openclassrooms.view.info",
                    "name": "Info",
                    "contextualTitle": "Info"
                },
                {
                    "type": "webview",
                    "id": "openclassrooms.view.translationList",
                    "name": "Translations"
                },
                {
                    "id": "openclassrooms.view.info2",
                    "name": "Info 2",
                    "contextualTitle": "Info2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn package",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx"
    },
    "devDependencies": {
        "@types/async": "^3.2.12",
        "@types/flat": "^5.0.2",
        "@types/lodash": "^4.14.181",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "esbuild": "^0.14.30",
        "eslint": "^7.21.0",
        "ts-loader": "^9.2.8",
        "typescript": "^4.6.3",
        "webpack": "^5.71.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "@types/js-yaml": "^4.0.5",
        "@types/node-fetch": "^2.6.1",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.14",
        "async": "^3.2.3",
        "classnames": "^2.3.1",
        "flat": "^5.0.2",
        "fs-extra": "^10.0.1",
        "js-yaml": "^4.1.0",
        "lodash": "^4.17.21",
        "node-fetch": "^2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-icons": "^4.3.1",
        "react-jss": "^10.9.0"
    }
}